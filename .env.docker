# QYKCart Docker Development Environment Variables
# This file contains environment variables for Docker Compose

# Project Configuration
COMPOSE_PROJECT_NAME=qykcart

# Port Configuration
API_PORT=3003
MYSQL_PORT=3310
REDIS_PORT=6379
ADMINER_PORT=8085
PHPMYADMIN_PORT=8082

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=qykcart_db
MYSQL_USER=qykcart_user
MYSQL_PASSWORD=qykcart_password

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=dev-super-secret-jwt-refresh-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api/v1
SWAGGER_PATH=api/docs
ENABLE_SWAGGER=true
LOG_LEVEL=debug
CORS_ORIGIN=*

# Firebase Configuration (Update with your Firebase credentials)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email